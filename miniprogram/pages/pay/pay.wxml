<!--miniprogram/pages/pay/pay.wxml-->
<view>

  <view class="item-head">
    <image class="item-image" src='{{ image }}'></image>
    <view class='full'>
      <view class="inline title">{{ name }}</view>
      <view class='inline right'>
        <view class="view-num">{{ view_num }}浏览</view>
        <view class="buy-num">{{ buy_num }}已售</view>
      </view>
    </view>
    <view>
      <view class='inline price'>¥ {{ price }}</view>
      <view class='inline old-price'>¥{{ old_price }}</view>
    </view>



  </view>
  <view class="item-body">
    <view class="address">{{ address }}</view>
    <view class="desc">{{ desc }}</view>
  </view>

  <view class="footer">
    <view class="posta_coll">
      <button class="f_b go-index">首页</button>
    </view>
    <view class='posta_coll'>
      <button open-type='share' class="f_b share">分享</button>
    </view>

    <button wx:if='{{ is_login }}' class="f_b buy-btn" bindtap='CreateOrder'>立即购买</button>
    <button wx:else class="f_b buy-btn" open-type='getUserInfo' bindgetuserinfo='userLogin'>立即购买</button>

  </view>
</view>