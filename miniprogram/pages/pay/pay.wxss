/* miniprogram/pages/pay/pay.wxss */



.item-head {
  padding-bottom: 20rpx;
  box-shadow: 0rpx 2rpx 20rpx #eee;
}
.item-image {
  width: 100%;
  height: 500rpx;
}

.full {
  width: 100%;
  min-height: 100rpx;
}

.title {
  max-width: 75%;
  padding: 16rpx;
}
.right {
  position: absolute;
  right: 0;
  font-size: 26rpx;
  color: #ddd;
  padding-right: 16rpx;
  text-align: right;
  padding-top: 30rpx;

}

.inline {
  display: inline-block
}

.footer {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between; 
   /* height: 128rpx;  */
  box-shadow: 0rpx -2rpx 14rpx #eee;
  font-size: 28rpx;
  position:fixed;
  bottom:0;
  background-color:#fff;
  width:750rpx;
  padding:20rpx 30rpx 20rpx 0;
  box-sizing: border-box;
  z-index:10;
}

.post_btn{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between; 
   /* height: 128rpx;  */
  box-shadow: 0rpx -2rpx 14rpx #eee;
  font-size: 28rpx;
  position:fixed;
  bottom:0;
  background-color:#fff;
  width:750rpx;
  padding:20rpx 30rpx 20rpx 0;
  box-sizing: border-box;
  z-index:10;
}
.posta_coll{
   flex:1;
   /* border-radius:10rpx; */
   color: #7d8a9d;
   text-align: center;
   display:flex;
   justify-content:center;
   align-items: center;
   border-left:1px solid #e6e6e6;
   font-size: 28rpx;
}
.posta_coll:first-child {
  border:none;
}
.posta_coll button {
  font-size: 28rpx;
  text-align: center;
}
.posta_coll button image{
  width: 32rpx;
  height: 28rpx;
}
.posta_coll .posta_coll_img {
  width: 38rpx;
  height: 28rpx;
}
.buy-btn{
   width: 440rpx;
   height: 88rpx;
   line-height: 88rpx;
   border-radius:10rpx;
   background-color: #6698ff;
   border: 1rpx solid #eaeaea;
   color: #fff;
   text-align: center;
   font-size:28rpx;
}